.bg_1{
  background: #d0f81c;
}
.w{
  width: 90%;
  margin: 0 auto;
}

page{
  background: url("https://www.72toy.com/mpb_mtbox/v/v3/share/images/indexPc/bg.png") no-repeat;
  background-size: 100% 100%;
  font-size: 35rpx;
}
.ji_title{
  width: 100%;
  text-align: center;
  height: 80rpx;
  border-bottom: 1px solid #000;
}
.ji_title text{
  line-height: 80rpx;
  height: 80rpx;
  border: 2px solid #000;
  padding: 5rpx 20rpx;
}
.ji_title .ji_left{
  border-right: none;
  
}
.ji_money{
  width: 100%;
  border-bottom: 1px solid #000;
 
}
.ji_money .ji_selected{
   border-bottom: 1px solid #ddd;
   height: 80rpx;
   position: relative;
}
.ji_money .ji_selected .fl{
   margin-top: 15rpx;
}
.ji_money .ji_selected .fr{
  height: 80rpx;
  line-height: 80rpx;
}
.ji_money .ji_selected .fr input{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  padding-right: 15rpx
}

.ji_money .ji_sel{
  overflow: hidden; 
  padding:20rpx 0;
}
.ji_li{
  margin: 0 20rpx 10rpx 0;
  float: left;
  border: 1px solid #000;
  border-radius: 20rpx;
  padding: 3rpx 20rpx;
  position: relative;
}

.hui{
  background-color: #bbb;
  width: 100rpx;
  height: 100rpx;
  position: relative
}
.ji_add_li {
  border: 1px dashed #ccc;
  border-radius: 20rpx;
  padding: 3rpx 20rpx;
  margin: 0 20rpx 10rpx 0;
  float: left;
  height: 40rpx;
}
.ji_add_li input{
  line-height:40rpx;
  height:40rpx;
  min-height:30rpx;
  width:150rpx;
}
.add_li_placeholder{
  line-height:40rpx;
  height:40rpx;
}
.ji_time{
  padding: 20rpx 0;
  border-bottom: 1px solid #000;
}
.ji_time .ji_time_li{
  padding-bottom: 20rpx;
}
.ji_time .ji_time_title{
  padding-right: 30rpx;
}
.ji_time .ji_time_remark_parent{
  position: relative;
  height: 30rpx;
}
.ji_time .ji_time_remark{
  position: absolute;
  top: 10rpx;
  left: 0;
} 
.ji_time .ji_time_li input{
  position: absolute;
  top: 6rpx;
  left: 105rpx;
}
.ji_time .ji_time_li .ji_time_num{
  position: absolute;
  top: 10rpx;
  right: 0;
  color: #bbb;
}
.ji_button {
  margin-top: 20rpx;
}
.ji_button button{
  border: 3rpx solid #000;
}

.delImage{
  width: 40rpx;
  height: 40rpx
}

.meng{
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 99998;
  opacity:0.5;
}
.delete{
  height: 75rpx;
  width: 70%;
  background: #fff;
  color: #000;
  position: fixed;
  top: 40%;
  left: 15%;
  border-radius: 10rpx;
  z-index: 99999;
  
}
.delete view{
  height: 75rpx;
  width: 100%;
  line-height: 75rpx;
  padding-left: 50rpx;
  box-sizing: border-box;
}
.delete .modify{
  border-bottom: 1px solid #ddd;
}
.tishi{
  border-top:1px solid #ddd;
  clear:both;
  font-size:30rpx;
  padding:10rpx 0 0 45rpx;
  color:red;

}