page{
  background-color: #fafaf8;
}
.body{
  margin: 0 auto;
  width: 100%;
  background: url("https://www.72toy.com/mpb_mtbox/v/v3/share/images/indexPc/bg.png") no-repeat;
  background-size: 100% 100%;
}
.body .w{ 
  width: 95%;
  margin: 0 auto;
}
.body .time{
  height: 100rpx;
  border-bottom: 4px solid #343434;
}
.body .time .time-fl{
  font-size: 30rpx;
  font-weight: 500;
  height: 80rpx;
  line-height: 50rpx;
  padding: 20rpx 10rpx 0;
}
.body .time .time-fl .selectTime{
  border: 1px solid #ddd;
  background: #fff;
  position: relative;
  width: 200rpx;
}


.body .time .time-fl .li{
  float: left;
  padding: 0 10rpx;
}
.body .time .time-fl .li .sanjiao{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 7rpx;
  right: 10rpx;
  
}
.body .time .time-fl .li image{
  width: 100%;
  height: 100%;
}
.body .time .fr{
  position: relative;
}

.body .time .fl_activity{
  width: 65rpx;
  height: 70rpx;
  float: right;
  padding-right: 20rpx;
  padding-top: 18rpx;
}
.body .account{
  border-top: 2px solid #343434;
  margin-top: 10rpx;
  margin-bottom: 1px solid #ddd;
}
.body .account_desc{
  height: 150rpx;
}
.body .account_desc view{
  height: 150rpx;
  line-height: 150rpx;
  font-size: 40rpx;
}
.body .account_desc .fl{
  font-weight: 900;
}
.body .account_desc .fr{
  font-weight: 500;
}
.body .canvas{
   width: 100%;
   height:300px;
   margin: 0 auto;
}

